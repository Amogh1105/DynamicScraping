
@{
    ViewBag.Title = "GST";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GST Filing Status</title>

    <style>
        input {
            border-radius: .2em;
            border: 1px solid #cccccc;
            -webkit-transition: border linear .2s, box-shadow linear .2s;
            -moz-transition: border linear .2s, box-shadow linear .2s;
            -o-transition: border linear .2s, box-shadow linear .2s;
            transition: border linear .2s, box-shadow linear .2s;
        }

            input:focus {
                border-color: rgba(82, 168, 236, 0.8);
                outline: 0;
                outline: thin dotted \9;
                -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(82,168,236,.6);
                -moz-box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(82,168,236,.6);
                box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(82,168,236,.6);
            }
         

        /*#loading {
            position: fixed;
            width: 100%;
            height: 100vh;
            background: #fff url('~/images/Spinner.gif') no-repeat center center;
            z-index: 9999;
        }*/
    </style>

    </head>
    <body>
        <div>
            @using (Html.BeginForm("GST", "Home", FormMethod.Post, new { id = "myform" }))
            {
                 <h5>GST Return Status</h5>
                 <br/>
                <label>Enter GSTIN:</label>


                @Html.TextBox("GSTSearch", "", new { style = "width:500px; margin-left:40px;" , placeholder = "Enter GSTIN Number", required = "required;"  })
              <br/>
                <br/>
             <label>Enter Fiscal Year:</label>
            <select class="form-control" id="FiscalYear" name="FiscalYear" style="width:250px; margin-top:-40px;margin-left:150px;">
                <option>Select Year</option>
                <option>2017-18</option>
                <option>2018-19</option>
                <option>2019-20</option>
            </select>
                <br/>
                <br/>
                <input type="submit" value="Fetch Return Status" class="btn btn-primary" id="submit" />
            }


        </div>



    </body>

    </html>
